<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.hyunil.a15gym.ProfileActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/iu"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="38dp" />

    </TableRow>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:stretchColumns="0,1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sujungtext1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textColor="#888888"
                android:text="이름"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/sujungtext2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/sujungtext3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textColor="#888888"
                android:text="키(cm)"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/sujungtext4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/sujungtext5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textColor="#888888"
                android:text="몸무게(kg)"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/sujungtext6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                />
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sujungtext7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#888888"
            android:text="상메"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/sujungtext8"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/sujungbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onChangeButtonClicked"
            android:text="저장하기"
            android:textSize="20sp" />
    </LinearLayout>
</TableLayout>